extends layout

block content

    .col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
        h1.page-header Dashboard
        .row.placeholders
            .col-xs-6.col-sm-3.placeholder
                img.img-responsive(data-src='holder.js/200x200/auto/sky', alt='Generic placeholder thumbnail')
                h4 Label
                span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
                img.img-responsive(data-src='holder.js/200x200/auto/vine', alt='Generic placeholder thumbnail')
                h4 Label
                span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
                img.img-responsive(data-src='holder.js/200x200/auto/sky', alt='Generic placeholder thumbnail')
                h4 Label
                span.text-muted Something else
            .col-xs-6.col-sm-3.placeholder
                img.img-responsive(data-src='holder.js/200x200/auto/vine', alt='Generic placeholder thumbnail')
                h4 Label
                span.text-muted Something else

        h2.sub-header Latest VM Status
        .table-responsive
            table.table.table-striped
                thead
                    tr
                        th Time
                        th VM
                        th State
                        th Path
                        th FS Type
                        th OS Type
                        th Memory(GB)
                        th #CPU

                tbody
                    - for local in status
                        tr
                            td= local.generateTime
                            td= local.name
                            td(style='color:' + local.color)= local.state
                            td= local.path
                            td= local.FSType
                            td= local.OSType
                            td= local.maxMem
                            td= local.numOfCpu


    //Bootstrap core JavaScript
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')


